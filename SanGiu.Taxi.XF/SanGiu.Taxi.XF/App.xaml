<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dm="clr-namespace:SanGiu.Taxi.DomainModel;assembly=SanGiu.Taxi.DomainModel"
             x:Class="SanGiu.Taxi.XF.App">
    <Application.Resources>
        <x:String x:Key="currentVersion">v.1.0 (alpha)</x:String>
        <x:Double x:Key="DefaultWeight">40</x:Double>
        <Color x:Key="MainBrand">#90A1F7</Color>

        <Color x:Key="MainBrandAnd">Green</Color>
        <Color x:Key="MainBrandWin">Blue</Color>

        <!-- stile implicito per il controllo Button -->
        <!-- la x:Key di questo stile è typeof(Button) -->
        <Style TargetType="Button">
            <Setter Property="BorderColor" Value="Red" />
            <Setter Property="BorderRadius" Value="6" />
            <Setter Property="BorderWidth" Value="6" />
            <Setter Property="BackgroundColor" Value="{StaticResource MainBrand}"/>
        </Style>

        <!--<Style TargetType="ContentPage">
            <Setter Property="Padding">
                <OnPlatform x:TypeArguments="Thickness"
                            Android="100"
                            iOS="0,20,0,0"
                            WinPhone="100" />
            </Setter>
        </Style>-->

        <Style TargetType="Entry" x:Key="chocoEdit">
            <Setter Property="FontAttributes" Value="Italic" />
            <Setter Property="Placeholder" Value="inserire qui il testo..."/>
            <Setter Property="BackgroundColor" Value="Chocolate" />
            <Setter Property="PlaceholderColor" Value="WhiteSmoke" />
            <Setter Property="TextColor">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="Color" 
                                Android="{StaticResource MainBrandAnd}"
                                WinPhone="{StaticResource MainBrandWin}" />
                </Setter.Value>
            </Setter>
        </Style>


        <DataTemplate x:Key="taxiListTemplate">
            <ViewCell>
                <Grid>
                    <Grid.Triggers>
                        <DataTrigger TargetType="Grid" Binding="{Binding Status}"
                                             Value="{x:Static dm:TaxiStatus.Ok}">
                            <Setter Property="BackgroundColor" Value="Green" />
                        </DataTrigger>
                        <DataTrigger TargetType="Grid" Binding="{Binding Status}"
                                             Value="{x:Static dm:TaxiStatus.Warning}">
                            <Setter Property="BackgroundColor" Value="Orange" />
                        </DataTrigger>
                        <DataTrigger TargetType="Grid" Binding="{Binding Status}"
                                             Value="{x:Static dm:TaxiStatus.Danger}">
                            <Setter Property="BackgroundColor" Value="DarkViolet" />
                        </DataTrigger>
                    </Grid.Triggers>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Entry Text="{Binding Targa}" Grid.Column="0" />
                    <Slider Minimum="0" Maximum="400000"
                                    Value="{Binding Km}"
                                    Grid.Column="1" />
                    <StackLayout Grid.Column="2" Scale="0.6" Orientation="Horizontal">
                        <Button Text="aggiorna"
                                    Command="{Binding UpdateCommand,Source={DynamicResource viewmodel}}"
                                    CommandParameter="{Binding}" />
                        <Button Text="cancella"
                                    Command="{Binding RemoveCommand,Source={DynamicResource viewmodel}}"
                                    CommandParameter="{Binding Id}" />
                    </StackLayout>
                </Grid>
            </ViewCell>
        </DataTemplate>

    </Application.Resources>
</Application>